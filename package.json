{
	"name": "prism-wiki",
	"version": "1.2.1",
	"description": "A Prism gadget for MediaWiki sites",
	"keywords": [
		"prism",
		"highlight",
		"mediawiki",
		"wikitext"
	],
	"homepage": "https://github.com/bhsd-harry/prism-wiki#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/prism-wiki/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/dist/wiki.js",
		"/dist/util.js",
		"/dist/wiki.d.ts",
		"/dist/main.min.js*"
	],
	"main": "./dist/wiki.js",
	"browser": "/dist/main.min.js",
	"types": "./dist/wiki.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/prism-wiki.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"lint:ts": "tsc --noEmit && tsc --noEmit --project test/tsconfig.json && eslint --cache .",
		"lint:css": "stylelint *.css",
		"lint:md": "markdownlint-cli2 '**/*.md'",
		"lint": "npm run lint:ts && npm run lint:css && npm run lint:md",
		"bundle": "node bundle.cjs",
		"build:test": "rm -rf test/dist/; tsc --project test/tsconfig.json && npm test",
		"build:gh-page": "esbuild src/gh-page.ts --charset=utf8 --bundle --target=es2019 --format=esm --outfile=dist/gh-page.mjs",
		"build": "tsc && rm dist/[ghm]*.[jt]s && npm run bundle && esbuild build/main.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=dist/main.min.js && eslint --no-config-lookup -c eslint.dist.mjs dist/main.min.js && npm run build:gh-page",
		"server": "npm run test:end; http-server .. -c-1 --cors -s &",
		"test": "mocha",
		"test:real": "node test/dist/real.js",
		"test:end": "pkill -x http-server"
	},
	"dependencies": {
		"@types/prismjs": "^1.26.5",
		"wikilint": "^2.35.0"
	},
	"devDependencies": {
		"@bhsd/browser": "^0.2.1",
		"@bhsd/code-standard": "^2.0.0",
		"@bhsd/codemirror-mediawiki": "^3.10.1",
		"@bhsd/common": "^1.3.1",
		"@bhsd/test-util": "^0.3.0",
		"@stylistic/eslint-plugin": "^5.7.1",
		"@stylistic/stylelint-plugin": "^5.0.1",
		"@types/jquery": "^3.5.33",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.10.9",
		"@typescript-eslint/eslint-plugin": "^8.54.0",
		"@typescript-eslint/parser": "^8.54.0",
		"esbuild": "^0.27.2",
		"eslint": "^9.39.2",
		"eslint-plugin-es-x": "^9.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^62.5.0",
		"eslint-plugin-jsonc": "^2.21.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^3.0.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"markdownlint-cli2": "^0.20.0",
		"mocha": "^11.7.5",
		"stylelint": "^17.1.0",
		"stylelint-config-recommended": "^18.0.0",
		"stylelint-plugin-use-baseline": "^1.2.1",
		"types-mediawiki": "^2.0.0",
		"typescript": "^5.9.3"
	}
}
