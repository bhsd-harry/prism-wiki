{
	"name": "prism-wiki",
	"version": "0.4.4",
	"description": "A Prism gadget for MediaWiki sites",
	"keywords": [
		"prism",
		"mediawiki",
		"wikitext"
	],
	"homepage": "https://github.com/bhsd-harry/prism-wiki#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/prism-wiki/issues"
	},
	"license": "GPL-3.0",
	"author": "Bhsd",
	"files": [
		"/dist/main.min.js*"
	],
	"browser": "/dist/main.min.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/prism-wiki.git"
	},
	"scripts": {
		"prepublishOnly": "npm run build",
		"lint:ts": "tsc --noEmit && tsc --noEmit --project test/tsconfig.json && eslint --cache .",
		"lint:css": "stylelint *.css",
		"lint": "npm run lint:ts && npm run lint:css",
		"bundle": "npm run build:css && node bundle.js",
		"build:css": "esbuild index.css --minify --outfile=dist/index.css",
		"build:test": "rm -rf test/dist/; tsc --project test/tsconfig.json && npm test",
		"build:gh-page": "esbuild src/gh-page.ts --charset=utf8 --bundle --minify --target=es2019 --format=esm --outfile=dist/gh-page.mjs",
		"build": "npm run bundle && esbuild build/main.js --charset=utf8 --minify --target=es2019 --format=iife --sourcemap --outfile=dist/main.min.js && eslint --no-eslintrc -c .eslintrc.dist.cjs dist/*.js && npm run build:gh-page",
		"test": "mocha",
		"test:real": "node test/dist/test/real.js"
	},
	"devDependencies": {
		"@bhsd/browser": "^0.0.1",
		"@bhsd/code-standard": "^1.1.0",
		"@bhsd/codemirror-mediawiki": "^3.4.2",
		"@bhsd/common": "^1.0.1",
		"@bhsd/test-util": "^0.1.0",
		"@stylistic/eslint-plugin": "^3.1.0",
		"@stylistic/stylelint-plugin": "^4.0.0",
		"@types/jquery": "^3.5.32",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.0.10",
		"@types/prismjs": "^1.26.5",
		"@typescript-eslint/eslint-plugin": "^8.35.1",
		"@typescript-eslint/parser": "^8.35.1",
		"esbuild": "^0.25.10",
		"eslint": "^8.57.1",
		"eslint-plugin-es-x": "^8.7.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-jsdoc": "^60.7.0",
		"eslint-plugin-json-es": "^1.6.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.9.0",
		"eslint-plugin-unicorn": "^56.0.1",
		"mocha": "^11.7.1",
		"stylelint": "^16.24.0",
		"stylelint-config-recommended": "^17.0.0",
		"stylelint-plugin-use-baseline": "^0.9.1",
		"types-mediawiki": "^2.0.0",
		"typescript": "^5.8.2",
		"wikilint": "^2.27.0"
	}
}
